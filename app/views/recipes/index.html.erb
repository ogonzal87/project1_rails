<!-- SEARCH BAR -->
<div class="searchbar">
  <form class="navbar-form" role="search">
    <div class="form-group">
      <input type="text" name="search" class="form-control" value="<%= @search %>"placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Let's get Zipping</button>
  </form>
  <h3>These are the coolest drinks ever</h3>
</div>


<!-- LIST OF ITEMS -->
<div class="row">
  <% @drinks.each do |drink| %>
    <div class="col-md-4">
      <a href="drinks/<%= drink.id %>" class="list-group-item">
        <h3><%= drink.name %></h3>
        <img class="middle" class="img-responsive" src="assets/<%= drink.image_file %>"/>       
      </a>         
    </div>
  <% end %>
</div>
