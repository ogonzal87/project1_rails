<!-- SEARCH BAR -->
<div class="searchbar">
  <form class="navbar-form" role="search">
    <div class="form-group">
      <input type="text" name="search" class="form-control" value="<%= @search %>"placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Let's get Zipping</button>
  </form>
</div>


<!-- LIST OF ITEMS -->
<div class="row">
  <% @drinks.each do |item| %>
    <div class="col-md-4">
      <a href="drinks/<%= item.id %>" class="list-group-item">
        <h3><%= item.name %></h3>
          <img class="middle" class="img-responsive" src="/images/<%= item.image_file %>"/>       
      </a>
    </div>
  <% end %>
</div>
